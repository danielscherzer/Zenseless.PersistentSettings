<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFrameworks>net5.0;net6.0</TargetFrameworks>
    <Nullable>enable</Nullable>
    <DocumentationFile>bin/Zenseless.PersistentSettings.xml</DocumentationFile>
  </PropertyGroup>

  <PropertyGroup>
    <PackageProjectUrl>https://github.com/danielscherzer/Zenseless.PersistentSettings</PackageProjectUrl>
    <PackageTags>.net settings persistent</PackageTags>
    <PackageReleaseNotes>Auto generated by AppVeyor</PackageReleaseNotes>
    <Description>Persist settings</Description>
    <Company>Daniel Scherzer</Company>
    <Authors>Daniel Scherzer</Authors>
    <Copyright>Copyright Â© 2021 Daniel Scherzer</Copyright>
    <Version>0.1.0</Version>
    <RepositoryUrl>https://github.com/danielscherzer/Zenseless.PersistentSettings</RepositoryUrl>
    <PackageLicenseExpression>MIT</PackageLicenseExpression>
  </PropertyGroup>

  <PropertyGroup>
    <DebugSymbols>true</DebugSymbols>
    <DebugType>embedded</DebugType>
    <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
  </PropertyGroup>

  <Target Name="PostPack" AfterTargets="Pack" Condition=" '$(APPVEYOR)' == '' ">
    <Exec Command="dotnet nuget push bin\**.nupkg  -s $(AppData)\..\Local\Temp\NuGetScratch" />
  </Target>

  <ItemGroup>
    <PackageReference Include="Newtonsoft.Json" Version="13.0.1" />
  </ItemGroup>
</Project>
